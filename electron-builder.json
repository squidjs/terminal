{
  "publish": [
    "github"
  ],
  "appId": "com.squids.squid",
  "copyright": "Copyright Â© 2021 Squid",
  "productName": "Squid",
  "generateUpdatesFilesForAllChannels": true,
  "afterPack": "./scripts/snapshot/afterPack.js",
  "extraFiles": ["resources"],
  "asar": false,
  "nsis": {
    "oneClick": false,
    "installerIcon": "./build/icon.ico",
    "allowToChangeInstallationDirectory": true
  },
  "win": {
    "icon": "build/icon.ico"
  },
  "linux": {
    "icon": "./build/icon.png",
    "category": "TerminalEmulator",
    "target": [
      {
        "target": "deb",
        "arch": ["x64"]
      },
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ]
  },
  "mac": {
    "icon": "./build/icon.icns",
    "category": "public.app-category.developer-tools",
    "identity": null,
    "target": [
      {
        "target": "default",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "snap": {
    "publish": {
      "provider": "generic",
      "url": "https://anydummyurl.com"
    }
  }
}
